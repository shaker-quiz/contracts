{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "channel": {
      "type": "string",
      "enum": [
        "vkontakte",
        "telegramBot",
        "email"
      ]
    },
    "confirmed_channel": {
      "type": "string",
      "enum": [
        "vkontakte",
        "telegramBot",
        "email"
      ]
    },
    "email": {
      "type": "string"
    },
    "vkontakte": {
      "type": "string"
    },
    "telegramBot": {
      "type": "string"
    }
  },
  "required": [
    "channel"
  ],
  "additionalProperties": false,
  "allOf": [
    {
      "if": {
        "properties": {
          "channel": { "const": "vkontakte" }
        }
      },
      "then": {
        "required": ["vkontakte", "confirmed_channel"]
      }
    },
    {
      "if": {
        "properties": {
          "channel": { "const": "telegramBot" }
        }
      },
      "then": {
        "required": ["telegramBot", "confirmed_channel"]
      }
    },
    {
      "if": {
        "properties": {
          "channel": { "const": "email" }
        }
      },
      "then": {
        "required": ["email"]
      }
    }
  ]
}
