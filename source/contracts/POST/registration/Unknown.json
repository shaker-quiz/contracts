{
  "type": "object",
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid"
    },
    "human_name": {
      "type": "string"
    },
    "team_name": {
      "type": "string"
    },
    "people_count": {
      "type": "integer"
    },
    "channel": {
      "type": "string"
    },
    "confirmed_channel": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "vkontakte": {
      "type": "string"
    },
    "telegramBot": {
      "type": "string"
    },
    "is_alone": {
      "type": "boolean"
    },
    "is_birthday": {
      "type": "boolean"
    },
    "is_extensible": {
      "type": "boolean"
    },
    "is_first": {
      "type": "boolean"
    },
    "ads_from": {
      "type": "string"
    },
    "comment": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "promocode": {
      "type": "string"
    },
    "utm_campaign": {
      "type": "string"
    },
    "utm_content": {
      "type": "string"
    },
    "utm_medium": {
      "type": "string"
    },
    "utm_source": {
      "type": "string"
    },
    "utm_term": {
      "type": "string"
    }
  },
  "required": [
    "event_id",
    "human_name",
    "team_name",
    "people_count",
    "channel",
    "is_alone",
    "is_birthday",
    "is_extensible",
    "is_first"
  ],
  "additionalProperties": true,
  "anyOf": [
    {
      "if": {
        "properties": {
          "channel": {
            "const": "vkontakte"
          }
        }
      },
      "then": {
        "required": [
          "confirmed_channel",
          "vkontakte"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "channel": {
            "const": "telegramBot"
          }
        }
      },
      "then": {
        "required": [
          "confirmed_channel",
          "telegramBot"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "channel": {
            "const": "email"
          }
        }
      },
      "then": {
        "required": [
          "email"
        ]
      }
    }
  ]
}